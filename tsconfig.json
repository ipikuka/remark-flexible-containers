{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "outDir": "dist/esm",
    "types": ["node", "jest"]
  }
}
