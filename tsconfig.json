{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "noImplicitReturns": true,
    "outDir": "dist/esm",
    "types": ["node", "jest"]
  }
}
